<UserControl x:Class="ClientApp.MyControls.MyProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ClientApp.MyControls"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d">
    <StackPanel>
        <controls:ProgressRing IsActive="True" Height="50" Width="50" HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
        <Label Margin="0,20,0,0" Content="Please wait..." HorizontalContentAlignment="Center" FontSize="10"
               Foreground="#949494" />
    </StackPanel>
</UserControl>